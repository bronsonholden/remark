<%=
  link_to @options[:path],
    aria: {label: @options[:aria_label]},
    class: "p-3 leading-[0] text-gray-800 dark:text-gray-400 dark:hover:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-800 font-medium rounded-md" do
%>
  <%=
    heroicon @options[:icon],
      variant: :outline,
      options: { class: "h-full inline-block w-4" },
      path_options: { stroke_width: 2 }
  %>
  <%= @options[:label] %>
<% end %>
