<%= form_for :session, url: session_path do |form| %>
  <div class="my-4">
    <%= form.label :email, class: "block font-semibold text-lg text-gray-800 dark:text-gray-400" %>
    <%= form.email_field :email, class: "rounded-md w-full dark:bg-gray-800" %>
  </div>
  <div class="my-4">
    <%= form.label :password, class: "block font-semibold text-lg text-gray-800 dark:text-gray-400" %>
    <%= form.password_field :password, class: "rounded-md w-full dark:bg-gray-800" %>
  </div>

  <%=
    form.submit "Sign in",
      class: "px-4 py-2 mb-4 bg-cyan-600 rounded-md text-white font-medium cursor-pointer w-full"
  %>
<% end %>
<%=
  link_to "Create account",
    sign_up_path,
    class: "block text-center decoration-inherit rounded-md text-gray-400 dark:hover:text-gray-100 hover:text-gray-700 font-medium cursor-pointer"
%>
<%
  link_to "Forgot password?",
    new_password_path,
    class: "block text-center decoration-inherit py-2 rounded-md text-gray-400 dark:hover:text-gray-100 hover:text-gray-700 font-medium cursor-pointer"
%>
