<% if @articles.any? %>
  <ol class="sm:my-4">
    <% @articles.each do |article| %>
      <li class="mb-8">
        <%=
          link_to article_blog_path(article),
            class: "text-4xl font-bold" do
        %>
          <%= article.title %>
        <% end %>
        <p class="text-gray-500">
          Published <%= distance_of_time_in_words(Time.now, article.published_at) %> ago by <%= article.author.full_name %>
        </p>
      </li>
    <% end %>
  </ol>
<% else %>
  <p class="text-3xl font-semibold text-center text-gray-500 my-6">
    No blog posts available
  </p>
<% end %>
