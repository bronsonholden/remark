<%= turbo_frame_tag "remarks-page-#{@page}" do %>
  <% if @remarks.any? %>
    <%= render @remarks %>
    <% if @has_more %>
      <%=
        turbo_frame_tag "remarks-page-#{@next_page}",
          autoscroll: true,
          target: "_top",
          src: remarks_path(@next_params.merge(page: @next_page)),
          loading: :lazy
      %>
    <% end %>
  <% else %>
    <div class="text-2xl my-20 text-center text-semibold text-gray-300 dark:text-gray-700">
      No results found
    </div>
  <% end %>
<% end %>
